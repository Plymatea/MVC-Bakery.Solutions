@{
  Layout = "_Layout";
}
@using Vendors.Models;

<h3>Vendors</h3>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 

@foreach (Vendor element in Model)
{
  @* <h3><a href='/vendors/@element.Id'>@element.Name</a></h3> *@
}

<form action="/vendors/new" method="get">
  <button class="btn btn-primary btn-lrg">Add an Vendors!</button>
</form>

<form action="/vendors/delete" method="post">
  <button type="submit" name="button" class="btn btn-primary btn-lrg">Clear All Vendors</button>
</form>


