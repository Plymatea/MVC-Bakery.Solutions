@{
  Layout = "_Layout";
}
@using Vendors.Models

<h5>Add a new order to @Model.Name</h5>
<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendors" name="vendors" type="hidden" value="@Model.Name">
  <label for="orderName">Order Name:</label>
  <input type="text" name="orderName" id="title">
  <button type="submit">Submit</button>
</form>
<p><a href='/vendors/@Model.Id/orders'>Back to all orders with @Model.Name</a></p>
<p><a href="/vendors">Back to all vendors</a></p>
